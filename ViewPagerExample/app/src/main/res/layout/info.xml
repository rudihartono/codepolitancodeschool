<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardInfo"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="16dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivSampulInfo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:paddingLeft="8dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Ini adalah Judul"
        android:id="@+id/tvInfoJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivSampulInfo" />
    <TextView
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:text="Nama penulis"
        android:id="@+id/tvInfoPenulis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivSampulInfo"
        android:layout_below="@+id/tvInfoJudul" />
</RelativeLayout>
</android.support.v7.widget.CardView>